<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/tab_home_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:stateListAnimator="@drawable/bm_selector_press_scale_out"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/tab_home_icon_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_home_default"/>

        <TextView
            android:id="@+id/tab_home_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="@string/title_home1"
            android:textSize="@dimen/text_size_12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_find_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:stateListAnimator="@drawable/bm_selector_press_scale_out"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/tab_find_icon_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="2dp"
            android:src="@mipmap/ic_find_default"/>

        <TextView
            android:id="@+id/tab_find_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="@string/title_home2"
            android:textSize="@dimen/text_size_12sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/tab_task_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:stateListAnimator="@drawable/bm_selector_press_scale_out"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/tab_task_icon_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="2dp"
            android:src="@mipmap/ic_task_default"/>

        <TextView
            android:id="@+id/tab_task_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="@string/title_home3"
            android:textSize="@dimen/text_size_12sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/tab_my_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:stateListAnimator="@drawable/bm_selector_press_scale_out"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/tab_my_icon_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="2dp"
            android:src="@mipmap/ic_my_default"/>

        <TextView
            android:id="@+id/tab_my_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="@string/title_home4"
            android:textSize="@dimen/text_size_12sp"/>
    </LinearLayout>
</LinearLayout>